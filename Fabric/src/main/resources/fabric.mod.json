{
    "schemaVersion": 1,
    "id": "ravenbrewscore",
    "version": "${version}",
  
    "name": "Raven Brews Core",
    "description": "This is the Core for the RavenCoffeeMod, so I can later work on similar mods instead of packing everything in the same mod.",
    "authors": [
      "The Wanderer Raven"
    ],
    "contact": {
      "homepage": "https://www.curseforge.com/minecraft/mc-mods/raven-brews-core",
      "sources": "https://github.com/TheWandererRaven/RavenBrewsCore#readme"
    },
  
    "license": "Apache-2.0 license",
    "icon": "assets/ravenbrewscore/RavenBrewsCoreLogo.png",
  
    "environment": "*",
    "entrypoints": {
      "main": [
        "com.thewandererraven.ravenbrewscore.RavenBrewsCoreFabric"
      ],
      "client": [
        "com.thewandererraven.ravenbrewscore.RavenBrewsCoreClient"
      ],
      "fabric-datagen": [
        "com.thewandererraven.ravenbrewscore.RavenBrewsCoreDataGenerator"
      ]
    },
    "mixins": [
      "ravenbrewscore.mixins.json"
    ],
  
    "depends": {
      "fabricloader": ">=0.15.11",
      "fabric": "*",
      "minecraft": "1.19.3",
      "java": ">=17"
    }
  }
  